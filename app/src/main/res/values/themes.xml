<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royalBlue</item>
        <item name="colorPrimaryVariant">@color/royalBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/frenchRose</item>
        <item name="colorSecondaryVariant">@color/frenchRose</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font</item>

        <item name="textColor">@color/flatBlack</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="buttonBackgroundColor">@color/royalBlue</item>
        <item name="toolbarBackground">@color/white</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:background">@drawable/shape_square_round</item>
        <item name="android:backgroundTint">?attr/buttonBackgroundColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:backgroundTint">?attr/toolbarBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/ToolBarTextStyle</item>
    </style>

    <style name="ToolBarTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textFontWeight">900</item>
    </style>
</resources>